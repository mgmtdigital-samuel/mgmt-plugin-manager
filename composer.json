{
    "name": "wordpress-sites-plugin-management",
    "description": "Manage plugins across multiple WordPress sites.",
    "type": "project",
    "require": {
        "wpackagist-plugin/query-monitor": "^3.12"  // Query Monitor plugin, version 3.12 or above
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "extra": {
        "installer-paths": {
            "wp-content/plugins/{$name}/": ["type:wordpress-plugin"]
        }
    }
}
